         <children>
            <ImageView fitHeight="32.0" fitWidth="29.0" onMouseClicked="#close_app" pickOnBounds="true" preserveRatio="true" styleClass="closeBtn">
               <image>
                  <Image url="@img/close.png" />
               </image>
            </ImageView>
            <Label text="Player2" />
            <Label text="Chose your Fighter" />
            <ListView prefHeight="200.0" prefWidth="200.0" />
            <HBox prefHeight="23.0" prefWidth="296.0">
               <children>
                  <Button fx:id="addBtn" mnemonicParsing="false" onAction="#onAddBtn" text="Add" />
                  <Button fx:id="removeBtn" mnemonicParsing="false" onAction="#onRemoveBtn" text="Remove" />
                  <Button fx:id="detailsBtn" mnemonicParsing="false" onAction="#onDetailsBtn" text="Details" />
               </children>
            </HBox>
            <Label text="Player 2s Team" />
            <ListView prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
   </items>
