   <items>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Player 1" />
            <Label text="Chose your Fighter" />
            <ListView prefHeight="200.0" prefWidth="200.0" />
            <HBox prefHeight="29.0" prefWidth="295.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onAddBtn" text="Add" />
